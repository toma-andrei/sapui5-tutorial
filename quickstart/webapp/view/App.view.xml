<!-- xmlns: namespace for UI controls  -->
<!-- xmlns:mvc: namespace for mvc library  -->
<mvc:View
	controllerName="tutorial.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
>
	<!-- this view is empty. The router will insert the view coresponding to the current URL -->
	<Shell>
		<!-- Shell limits the page width (the content under the top line)-->
		<App
			class="myAppDemoWT"
			id="app"
		/>
	</Shell>
</mvc:View>
